{% extends 'base_clean.html.twig' %}

{% block bodyattr %}
    class="bg-white text-dark" style="height: 100%;"
{% endblock %}

{% block body %}
    <div class="container question-page">
        <div class="text-center mt-3">
            <h3 class="wizard-title">{% trans %}Create profile{% endtrans %}</h3>
            <p class="text-muted">{% trans %}This information will help us find the most relevant contact for you{% endtrans %}</p>
        </div>
        <div class="d-flex align-items-center flex-column justify-content-center h-100">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-5 d-flex align-items-center justify-content-center">
                            <img src="{{ community.getLogoUrl() }}" class="w-100">
                        </div>
                        <div class="col-lg-9 d-flex align-items-center">
                            <div>
                                <h5 class="mb-1">{{ community.getTitle() }}</h5>
                                <div class="text-justify">
                                    {{ community.getShortDescription()|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form method="post" id="question-form">
            {% include "user/_questions.html.twig" %}
        </form>
    </div>
    <div class="bg-light border-top footer d-flex justify-content-center align-items-center">
        <small>Â© Copyright <a target="_blank" href="https://www.meetsup.io">Meetsup</a>. All Rights Reserved</small>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let maxSelect = 3;
        let skey = "{{ csrf_token('email-token') }}";
        let req = Boolean({{ app.user.getEmail() is empty }});
    </script>
    <script src="{{ asset('assets/onboarding/onboard.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/jquery.validate.min.js') }}" type="text/javascript"></script>
{% endblock %}